<h1><%= @place["name"] %></h1>

<div class="row">
  <% for post in @posts %>
    <div class="col-md-4">
      <h3><%= post["title"] %></h3>
      <h4><%= post["posted_on"] %></h4>
      <p><%= post["description"] %></p>
    </div>
  <% end %>
</div>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
</p>